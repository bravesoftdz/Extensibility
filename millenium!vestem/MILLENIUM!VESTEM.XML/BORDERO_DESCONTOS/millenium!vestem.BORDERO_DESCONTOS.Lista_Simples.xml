<?xml version="1.0"?>
<root>
  <OBJECT NAME="BORDERO_DESCONTOS">
    <METHOD NAME="Lista_Simples" DESCRIPTION="" VERSION="0" THREADSAFE="1">
      <PARAMS/>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="COD_BORDERO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="2" FIELDLABEL="Cod Bordero" CTAB="0"/>
        <FIELD NAME="DESCRICAO" SIZE="60" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Descricao" CTAB="0"/>
        <FIELD NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="3" FIELDLABEL="Data" CTAB="0"/>
        <FIELD NAME="BANCO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="1" FIELDLABEL="Banco" CTAB="0"/>
        <FIELD NAME="BORDERO" FORMAT="N" SIZE="8" FLAGS="8" PROJECTION="0" FIELDLABEL="Bordero" CTAB="0"/>
        <FIELD NAME="DESC_CONTA" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="4" FIELDLABEL="Desc Conta" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT MIN(BORDERO.COD_BORDERO) AS COD_BORDERO, MIN(BORDERO.DESCRICAO) AS DESCRICAO, MIN((BANCOS.COD_BANCO || ' - ' || BANCOS.NOME)) AS BANCO, BORDERO.BORDERO, MIN(CONTAS.NUMERO) AS DESC_CONTA
FROM BORDERO
     LEFT JOIN BANCOS
          ON BORDERO.BANCO=BANCOS.BANCO
     LEFT JOIN CONTAS
          ON BORDERO.CONTA_COBRANCA=CONTAS.CONTA
GROUP BY BORDERO.BORDERO
ORDER BY 1
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>