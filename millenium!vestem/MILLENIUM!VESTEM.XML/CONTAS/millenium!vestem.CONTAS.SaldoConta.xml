<?xml version="1.0"?>
<root>
  <OBJECT NAME="CONTAS">
    <METHOD NAME="SaldoConta" DESCRIPTION="" VERSION="9" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" DEFAULT="TODAY" PROJECTION="0" ORDER="1" FIELDLABEL="Data" CTAB="0"/>
        <PARAM NAME="CONTA" SIZE="255" FLAGS="1" PROJECTION="0" ORDER="2" LOOKUP="MILLENIUM.CONTAS.Lista_Contas" LOOKUPKEY="CONTA" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="NUMERO" FIELDLABEL="Conta" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="CONTA" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="4" FIELDLABEL="Conta" CTAB="0"/>
        <FIELD NAME="SALDO" FORMAT="N" SIZE="15" FLAGS="1" DECIMALS="7" PROJECTION="0" ORDER="5" FIELDLABEL="Saldo" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>#PRIVATE()
SELECT
  C.CONTA,
  C.CONCILIADO,
  SUM(C.VALOR_PAGO) AS SALDO
FROM EXTRATO_CONC_BANCO C
WHERE C.CONCILIADO =:CONCILIADO
  [AND DATA&lt;:DATA]
  [AND CONTA IN #REPLACE(:CONTA)]
GROUP BY 1,2;
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>