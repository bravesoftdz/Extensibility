<?xml version="1.0"?>
<root>
  <OBJECT NAME="SOLICITAOES_MELHORIAS_PRODUTO">
    <METHOD NAME="Listar" DESCRIPTION="Listar Solicita&#231;&#245;es Melhoria Produto" VERSION="30" INTFTYPE="14" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="1" FIELDLABEL="Data" CTAB="0"/>
        <PARAM NAME="FUNCIONARIO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="2" LOOKUP="MILLENIUM.FUNCIONARIOS.LISTA" LOOKUPKEY="FUNCIONARIO" LOOKUPDISPLAY="NOME" LOOKUPCODE="COD_FUNCIONARIO" FIELDLABEL="Funcion&#225;rio" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="SOLICITACAO_MELHORIA_PRODUTO" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Solicitacao Melhoria Produto" CTAB="0"/>
        <FIELD NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Data" CTAB="0"/>
        <FIELD NAME="FUNCIONARIO" SIZE="60" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Funcion&#225;rio" CTAB="0"/>
        <FIELD NAME="TIPO_MELHORIA" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Tipo Melhoria" CTAB="0"/>
        <FIELD NAME="STATUS_WORKFLOW" SIZE="30" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Status Workflow" CTAB="0"/>
        <FIELD NAME="COD_SOLICITACAO_MELHORIA" SIZE="5" FLAGS="1" PROJECTION="0" ORDER="4" FIELDLABEL="C&#243;digo" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT M.COD_SOLICITACAO_MELHORIA,
       M.SOLICITACAO_MELHORIA_PRODUTO,
       M.DATA,
       F.NOME AS FUNCIONARIO,
       #TRANSLATE(M.TIPO_MELHORIA,
                  0: "Cadastro",
                  1: "Foto",
                  2: "Cadastro e Foto") AS TIPO_MELHORIA,
       SW.DESCRICAO AS STATUS_WORKFLOW
FROM SF_SOLICITACOES_MELHOR_PROD M
INNER JOIN FUNCIONARIOS F ON (F.FUNCIONARIO = M.FUNCIONARIO)
LEFT JOIN STATUS_WORKFLOW SW ON (SW.STATUS_WORKFLOW = M.STATUS_WORKFLOW)
WHERE [M.DATA=:DATA]
      [AND M.FUNCIONARIO =:FUNCIONARIO];
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>