<?xml version="1.0"?>
<root>
  <OBJECT NAME="INSPECOES">
    <METHOD NAME="LIstaHistoricoInspecoes" DESCRIPTION="Hist&#243;rico de Inspe&#231;&#245;es" VERSION="14" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="PRODUTO" FORMAT="N" SIZE="8" FLAGS="1" STYLE="5" PROJECTION="0" ORDER="1" LOOKUP="MILLENIUM.PRODUTOS.LISTA_POPUP3" LOOKUPKEY="PRODUTO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="CODIGO" FIELDLABEL="Produto" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="INSPECAO" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Inspecao" CTAB="0"/>
        <FIELD NAME="FICHA_TECNICA" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Ficha Tecnica" CTAB="0"/>
        <FIELD NAME="PRODUCAO" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Producao" CTAB="0"/>
        <FIELD NAME="COD_PRODUTO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="4" FIELDLABEL="Produto" CTAB="0"/>
        <FIELD NAME="DESC_PRODUTO" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Descri&#231;&#227;o Produto" CTAB="0"/>
        <FIELD NAME="FASE" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Fase" CTAB="0"/>
        <FIELD NAME="DESC_FASE" SIZE="50" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Fase" CTAB="0"/>
        <FIELD NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="3" FIELDLABEL="Data" CTAB="0"/>
        <FIELD NAME="USUARIO" SIZE="30" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Usuario" CTAB="0"/>
        <FIELD NAME="QUANTIDADE_APROVADA" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Quantidade Aprovada" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT I.INSPECAO,
       I.FICHA_TECNICA,
       I.PRODUCAO,
       P.COD_PRODUTO,
       P.DESCRICAO1 AS DESC_PRODUTO,
       I.FASE,
       F.DESCRICAO AS DESC_FASE,
       I.DATA,
       I.USUARIO,
       I.QUANTIDADE_APROVADA
FROM DCA_INSPECOES I
INNER JOIN FICHAS_TECNICAS FT ON (FT.FICHA_TECNICA = I.FICHA_TECNICA)
INNER JOIN PRODUTOS P ON (P.PRODUTO = FT.PRODUTO)
INNER JOIN FASES F ON (F.FASE = I.FASE)
WHERE [P.PRODUTO=:PRODUTO]
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>