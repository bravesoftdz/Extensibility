<?xml version="1.0"?>
<root>
  <OBJECT NAME="ORCAMENTOS">
    <METHOD NAME="Listar" DESCRIPTION="" VERSION="52" INTFTYPE="5" THREADSAFE="1">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="COD_ORCAMENTO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="1" FIELDLABEL="Or&#231;amento" CTAB="0"/>
        <PARAM NAME="CLIENTE" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="2" LOOKUP="MILLENIUM.CLIENTES.LISTA_FILTROPOPUP" LOOKUPKEY="CLIENTE" LOOKUPDISPLAY="NOME" LOOKUPCODE="COD_CLIENTE" FIELDLABEL="Cliente" CTAB="0"/>
        <PARAM NAME="ATIVO" FORMAT="B" SIZE="1" FLAGS="1" DEFAULT="1" PROJECTION="0" ORDER="3" FIELDLABEL="Ativo" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="ORCAMENTO" FORMAT="+" SIZE="8" FLAGS="1024" PROJECTION="0" FIELDLABEL="Orcamento" CTAB="0"/>
        <FIELD NAME="COD_ORCAMENTO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Or&#231;amento" CTAB="0"/>
        <FIELD NAME="NOME_CLIENTE" SIZE="50" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Cliente" CTAB="0"/>
        <FIELD NAME="COD_PRODUTO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="9" FIELDLABEL="C&#243;digo Produto" CTAB="0"/>
        <FIELD NAME="DESCRICAO_PRODUTO" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="10" FIELDLABEL="Descri&#231;&#227;o Produto" CTAB="0"/>
        <FIELD NAME="ATIVO" FORMAT="B" SIZE="1" FLAGS="1" PROJECTION="0" ORDER="11" FIELDLABEL="Ativo" CTAB="0"/>
        <FIELD NAME="USUARIO" SIZE="30" FLAGS="1" PROJECTION="0" ORDER="13" FIELDLABEL="Usu&#225;rio Inclus&#227;o" CTAB="0"/>
        <FIELD NAME="DATA_INCLUSAO" FORMAT="H" SIZE="18" FLAGS="1" PROJECTION="0" ORDER="12" FIELDLABEL="Data Inclus&#227;o" CTAB="0"/>
        <FIELD NAME="USUARIO_APROVADO" SIZE="30" FLAGS="1" PROJECTION="0" ORDER="16" FIELDLABEL="Usu&#225;rio Aprova&#231;&#227;o" CTAB="0"/>
        <FIELD NAME="DATA_APROVADO" FORMAT="H" SIZE="18" FLAGS="1" PROJECTION="0" ORDER="15" FIELDLABEL="Data Aprova&#231;&#227;o" CTAB="0"/>
        <FIELD NAME="APROVADO" FORMAT="B" SIZE="1" FLAGS="1" PROJECTION="0" ORDER="14" FIELDLABEL="Aprovado" CTAB="0"/>
        <FIELD NAME="REVISAO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="N&#176; Revis&#227;o" CTAB="0"/>
        <FIELD NAME="DATA_ORCAMENTO" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Data" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT O.ORCAMENTO,
       O.COD_ORCAMENTO,
       C.NOME AS NOME_CLIENTE,
       O.COD_PRODUTO,
       O.DESCRICAO_PRODUTO,
       O.ATIVO,
       O.USUARIO,
       O.DATA_INCLUSAO,
       O.USUARIO_APROVADO,
       O.DATA_APROVADO,
       O.APROVADO,
       O.REVISAO,
       O.DATA_ORCAMENTO
FROM DCA_ORCAMENTOS O
INNER JOIN CLIENTES C ON (C.CLIENTE = O.CLIENTE)
WHERE O.EXCLUIDO = FALSE
      [AND O.ATIVO=:ATIVO]
      [AND O.COD_ORCAMENTO=:COD_ORCAMENTO]
      [AND O.CLIENTE = :CLIENTE]
ORDER BY O.ORCAMENTO,O.COD_ORCAMENTO;
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>