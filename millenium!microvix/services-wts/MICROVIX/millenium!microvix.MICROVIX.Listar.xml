<?xml version="1.0"?>
<root>
  <OBJECT NAME="MICROVIX">
    <METHOD NAME="Listar" DESCRIPTION="Configura&#231;&#245;es Microvix" VERSION="11" INTFTYPE="14" THREADSAFE="0">
      <PARAMS/>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="MICROVIX" FORMAT="+" SIZE="8" FLAGS="1024" PROJECTION="0" FIELDLABEL="Microvix" CTAB="0"/>
        <FIELD NAME="ULTIMA_ATUA_PROD" FORMAT="H" SIZE="18" FLAGS="1" PROJECTION="0" ORDER="3" FIELDLABEL="&#218;ltima Atualiza&#231;&#227;o Produtos" CTAB="0"/>
        <FIELD NAME="TABELA_CUSTO" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="2" FIELDLABEL="Tabela Custo" CTAB="0"/>
        <FIELD NAME="TABELA_VENDA" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="1" FIELDLABEL="Tabela Venda" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT M.MICROVIX,
       M.ULTIMA_ATUA_PROD,
       TV.COD_TPRECO||'-'||TV.DESCRICAO AS TABELA_CUSTO,
       TC.COD_TPRECO||'-'||TC.DESCRICAO AS TABELA_VENDA
FROM MICROVIX M
INNER JOIN TABELAS_PRECO TV ON (TV.TABELA = M.TABELA_VENDA)
INNER JOIN TABELAS_PRECO TC ON (TC.TABELA = M.TABELA_CUSTO)

</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>