<?xml version="1.0"?>
<root>
  <OBJECT NAME="PRODUTOS">
    <METHOD NAME="ListaSimples" DESCRIPTION="Lista de Produtos" VERSION="51" THREADSAFE="1">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="DEPARTAMENTO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="6" LOOKUP="MILLENIUM.DEPARTAMENTOS.LISTA" LOOKUPKEY="DEPARTAMENTO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="CODIGO" FIELDLABEL="Departamento" CTAB="0"/>
        <PARAM NAME="DIVISAO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="2" LOOKUP="MILLENIUM.DIVISOES.LISTA" LOOKUPKEY="DIVISAO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="COD_DIVISAO" FIELDLABEL="Divis&#227;o" CTAB="0"/>
        <PARAM NAME="MARCA" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="3" LOOKUP="MILLENIUM.MARCAS.LISTAR" LOOKUPKEY="MARCA" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="COD_MARCA" FIELDLABEL="Marca" CTAB="0"/>
        <PARAM NAME="COLECAO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="1" LOOKUP="MILLENIUM.COLECOES.LISTA" LOOKUPKEY="COLECAO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="CODIGO" FIELDLABEL="Cole&#231;&#227;o" CTAB="0"/>
        <PARAM NAME="SUBCOLECAO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="4" LOOKUP="MILLENIUM.SUBCOLECOES.LISTAR" LOOKUPKEY="SUBCOLECAO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="COD_SUBCOLECAO" FIELDLABEL="SubCole&#231;&#227;o" CTAB="0"/>
        <PARAM NAME="TIPO" FORMAT="N" SIZE="8" FLAGS="1" PROJECTION="0" ORDER="5" LOOKUP="MILLENIUM.TIPOS.LISTA" LOOKUPKEY="TIPO" LOOKUPDISPLAY="DESCRICAO" LOOKUPCODE="CODIGO" FIELDLABEL="Tipo" CTAB="0"/>
        <PARAM NAME="UPDATE_PROD" FORMAT="B" SIZE="1" FLAGS="17" DEFAULT="1" PROJECTION="0" ORDER="7" FIELDLABEL="Apenas Produtos Desatualizados" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="PRODUTO" FORMAT="N" SIZE="8" PROJECTION="0" FIELDLABEL="Produto" CTAB="0"/>
        <FIELD NAME="COD_PRODUTO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="9" FIELDLABEL="C&#243;digo" CTAB="0"/>
        <FIELD NAME="DESCRICAO1" SIZE="100" FLAGS="1" PROJECTION="0" ORDER="10" FIELDLABEL="Descri&#231;&#227;o" CTAB="0"/>
        <FIELD NAME="UPDATE_PROD" SIZE="1" PROJECTION="0" FIELDLABEL="Update Prod" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT P.PRODUTO,
       P.COD_PRODUTO,
       P.DESCRICAO1,
       #if(#REPLACET(:UPDATE_PROD)='T','T','F') AS UPDATE_PROD
FROM PRODUTOS P
INNER JOIN MICROVIX M ON (M.MICROVIX = M.MICROVIX)
WHERE P.TIPO_PROD='AC'
      [AND P.DEPARTAMENTO=:DEPARTAMENTO]
      [AND P.DIVISAO=:DIVISAO]
      [AND P.MARCA=:MARCA]
      [AND P.COLECAO=:COLECAO]
      [AND P.SUBCOLECAO=:SUBCOLECAO]
      [AND P.TIPO=:TIPO]
      #SELECT(UPDATE_PROD,TRUE:{AND P.DATA_ATUALIZACAO >= M.ULTIMA_ATUA_PROD},ELSE:{})
ORDER BY P.DESCRICAO1;
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>