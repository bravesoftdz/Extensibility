<?xml version="1.0"?>
<root>
  <OBJECT NAME="LOGS">
    <METHOD NAME="Listar" DESCRIPTION="Monitor integra&#231;&#227;o API Mormaii" VERSION="12" THREADSAFE="0">
      <PARAMS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <PARAM NAME="TIPO" SIZE="1" FLAGS="1" PROJECTION="0" ORDER="1" LOOKUP="list:'1','ESTOQUE';'2','PEDIDO VENDA';'3','FATURAMENTO';" FIELDLABEL="Tipo" CTAB="0"/>
        <PARAM NAME="DATA" FORMAT="D" SIZE="10" FLAGS="1" PROJECTION="0" ORDER="2" FIELDLABEL="Data" CTAB="0"/>
        <PARAM NAME="NUMERO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="3" FIELDLABEL="Numero" CTAB="0"/>
      </PARAMS>
      <FIELDS>
        <GROUPS>
          <GROUP/>
        </GROUPS>
        <FIELD NAME="DATA" FORMAT="H" SIZE="18" FLAGS="1" PROJECTION="0" ORDER="5" FIELDLABEL="Data" CTAB="0"/>
        <FIELD NAME="TIPO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="6" FIELDLABEL="Tipo" CTAB="0"/>
        <FIELD NAME="NUMERO" SIZE="20" FLAGS="1" PROJECTION="0" ORDER="7" FIELDLABEL="Numero" CTAB="0"/>
        <FIELD NAME="MENSAGEM" SIZE="200" FLAGS="1" PROJECTION="0" ORDER="8" FIELDLABEL="Mensagem" CTAB="0"/>
      </FIELDS>
      <ACTIONSCRIPT>SELECT DATA,
       #TRANSLATE(TIPO, '1' : 'ESTOQUE', '2': 'PEDIDO DE VENDA', '3': 'FATURAMENTO' ,ELSE : 'DESCONHECIDO'  ) AS TIPO,
       NUMERO,
       MENSAGEM
FROM MOR_INTEGRACAO_LOG
WHERE [TIPO=:TIPO]
      [AND EXTRACTDATE(DATA) =:DATA]
      [AND NUMERO=:NUMERO]
ORDER BY DATA;
</ACTIONSCRIPT>
    </METHOD>
  </OBJECT>
</root>